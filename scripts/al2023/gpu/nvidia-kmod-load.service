[Unit]
Description=Loading NVIDIA kernel modules
# ECS doesn't need IMDS, so we can start earlier without network dependency
After=local-fs.target
Before=nvidia-fabricmanager.service nvidia-persistenced.service ecs.service

[Service]
Type=oneshot
ExecStart=/etc/ecs/nvidia-kmod-load.sh
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
